<button class="btn border-0 outline-none text-black nav-link text-center text-xxl-start py-3" id="navbar-notifications-button" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling" aria-controls="offcanvasScrolling">
  <i class="fa-solid fa-magnifying-glass fa-xl"></i><span class="d-none d-xxl-inline" style="margin-left: 19px;">Search</span>
</button>
<div class="offcanvas offcanvas-start border border-start z-1" style="margin-left: 64px; border-radius: 0px 26px 26px 0px; box-shadow: rgba(74, 87, 75, 0.150) 6px 0px 7px 0px;" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title fw-bold fs-4" id="offcanvasScrollingLabel">Search</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body px-1">
    <div>
      <%= form_with(url: users_path, method: :get, data: { turbo_frame: "side_turbo_search_results", controller: "search-results" }, class: "d-flex") do |f| %>
        <div class="dropdown-center mx-auto">
          <%= f.text_field :search_query, class: "form-control border-0 px-0 mx-auto", type: "search", placeholder: "  Search", "aria-label" => "Search", style: "background: #efefef; width: 360px; min-width: 180px ", "data-bs-toggle" => "dropdown", "aria-expand" => "false", data: { action: "input->search-results#search" } %>
          <%= f.hidden_field :tag_name, value: 'side_nav_search_form' %>
          <!--<div class="dropdown-menu rounded-3 mt-2" style="width: 398px">-->
            <%= render 'layouts/shared/search_results_side', users: [] %>
          <!--</div>-->
        </div>
      <% end %>
    </div>

    <hr>
    <p class="fw-bold">Recent</p>
  </div>
</div>
