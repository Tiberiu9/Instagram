<div id="post<%= comment.post_id %>ModalComment<%= comment.id %>">
  <div class="d-flex justify-content-between my-3">
    <div class="d-flex">
      <div style= "width: 46px; height: 46px; flex-shrink: 0">
        <% if comment.user.profile_pic.attached? %>
          <%= image_tag comment.user.profile_pic, class: "img-thumbnail rounded-circle", style: "width: 46px; height: 46px; padding: 0px;" %>
        <% else %>
          <%= image_tag "profile-pic.png", class: "img-thumbnail rounded-circle", style: "width: 46px; height: 46px; padding: 0px;" %>
        <% end %>
      </div>
      <div class="m-auto ms-3 ">
        <p class="card-text mb-0 px-2 text-break" style="font-size: 15px">
          <%= link_to comment.user, class: "text-decoration-none text-dark", data: {turbo: "false"} do %>
            <span class="fw-bold"> <%= comment.user.username%> </span>
          <% end %>
          <%= comment.body %>
        </p>
        <p class="text-muted" style="font-size: 14px">
          <%= time_ago_in_words(comment.created_at) %>
        </p>
      </div>
    </div>
    <div>
      <% if comment.user == current_user %>
        <%= button_to comment_path(id: comment.id), method: :delete, style: "background: none; border:none" do %>
          <i class="fa fa-times" ></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
