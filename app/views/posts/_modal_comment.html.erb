<div id="post<%= comment.post_id %>ModalComment<%= comment.id %>">
  <div class="d-flex justify-content-between my-3">
    <div class="d-flex">
      <div style= "width: 40px; height: 40px; flex-shrink: 0">
        <%= image_tag "profile-pic.png", class: "img-thumbnail rounded-circle p-0 border", style: "width: 39px; height: 39px " %>
      </div>
      <div class="m-auto ms-3 ">
        <p class="card-text mb-0 px-2 text-break" style="font-size: 15px"><span class="fw-bold"><%= comment.user.username%></span> <%= comment.body %></p>
        <p class="text-muted" style="font-size: 14px"><%= time_ago_in_words(comment.created_at) %></p>
      </div>
    </div>
    <div>
      <% if comment.user == current_user %>
        <%= button_to comment_path(id: comment.id), method: :delete, style: "background: none; border:none" do %>
          <i class="fa fa-times" ></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
