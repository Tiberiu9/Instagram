<div class="d-flex justify-content-between my-3">
  <div class="d-flex flex-row">
    <div>
      <% if liker.profile_pic.attached? %>
        <%= image_tag liker.profile_pic, class: "img-thumbnail rounded-circle", style: "width: 46px; height: 46px; padding: 0px;" %>
      <% else %>
        <%= image_tag "profile-pic.png", class: "img-thumbnail rounded-circle", style: "width: 46px; height: 46px; padding: 0px;" %>
      <% end %>
    </div>
    <div class="m-auto ms-3">
      <p class="story-username" style="max-width: 12rem; margin-bottom: 0; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; font: 14px sans-serif; font-weight:bold">
        <%= link_to liker, class: "text-decoration-none text-dark", data: {turbo: "false"} do %>
          <%= liker.username %>
        <% end %>
      </p>
    </div>
  </div>
  <div>
    <%= render 'layouts/shared/follow_state', user: liker %>
  </div>
</div>
