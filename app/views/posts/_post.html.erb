<!--<div id="<%#= dom_id post %>">-->
  <div class="container-sm border-0 px-0" style="max-width:468px">  <!--w-100-->
    <div class="card-header bg-white py-2 px-2 " style="">   <!--w-100-->
      <div class="d-flex justify-content-between">
        <div>
          <% if post.user.profile_pic.attached? %>
            <%= image_tag post.user.profile_pic, class: "img-thumbnail rounded-circle", style: "width: 10%; padding: 0;" %>
          <% else %>
            <%= image_tag "profile-pic.png", class: "img-thumbnail rounded-circle", style: "width: 10%; padding: 2px; border; border: 10 ; border-color: red" %>
          <% end %>
          <span class="fw-bold mx-2" style="font-size: 14px"><%= post.user.username %></span>
          <small class="text-muted"><%= time_ago_in_words(post.created_at) %></small>
        </div>
        <div>
          <div class="dropdown">
            <a class="text-decoration-none text-dark fs-4" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              ...
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#">Edit post</a></li>
              <li><a class="dropdown-item" href="#">Delete Post</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="card-body" style= "padding: 0"> <!--w-100-->
      <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="false">   <!-- false = stoped | carusel = autoslide directly | true = slide after 1 click-->
        <div class="carousel-indicators">
          <% post.images.each_with_index do |img, i| %>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="<%= i %>" class="carousel-buttons <%= i==0 ? 'active' : '' %>" aria-current="<%= i==0 ? 'true' : '' %>" aria-label="Slide <%= i+1 %>"></button>
          <% end %>
        </div>
        <div class="carousel-inner">
          <% post.images.each_with_index do |img, i| %>
            <div class="carousel-item <%= i==0 ? 'active' : '' %>" style=";">
              <%= image_tag img, class: "d-block w-100 ", style: "max-height: 30%; object-fit: cover; "%> <!--w-100-->
            </div>
          <% end %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" style="width: 26px; height: 26px;" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
          <span class="carousel-control-next-icon" style="width: 26px; height: 26px" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
      <div class="card-text mt-2 px-2" style="font-size: 14px"><span class="fw-bold fs-6"><%=post.user.username%></span> <%=post.caption%> captioooon dfdi dfif dsf dfmidm idmifm idmifmdd dfdsdf gfd dffgd  fghf g hh hhgfhhjgj hg hjgdifmi</div>
    </div>
    <div class="card-footer d-flex justify-content-between bg-white px-2 pt-0 pb-3 mb-3 rounded-0" style=" border-top: 0px; border-bottom: 1px solid gray;">
      <input type="text" class="w-75 border-0" placeholder="Add a comment..." style="font-size: 14px; text-muted">
      <a class="text-primary text-decoration-none fw-bold text-dark">Post</a>
    </div>
  </div>
