<div class="container d-flex flex-column border-top border-top-1">
  <div class="d-flex justify-content-center align-items-center">
    <div class="w-content border-2 border-top border-dark ">
      <i class="fa-solid fa-table-cells py-3"></i>
      <small class="fw-bold">POSTS</small>
    </div>
  </div>
  <div class="row justify-content-center align-items-center border-0">
    <% user.posts.each do |post| %>
      <div class="col-lg-4 col-md-6 g-1 profile-post " style="height: 20rem; position: relative;">
        <%= link_to post do %>
          <div id="post-images">
            <%= image_tag post.images.first, class:"posts-img-thumbnail g-1", style: "width: 100%; height: 20rem; object-fit: cover; border: 0px; padding: 0px; border-radius: 0px; " %>
          </div>
          <div class=" profile-post-likes " >
            <i class="fa-solid fa-heart fa-xl text-white " ></i>
            <small class="text-white fw-bold"> <%= post.likes.count %> &emsp; </small>
            <i class="fa-solid fa-comment fa-xl fa-flip-horizontal text-white " ></i>
            <small class="text-white fw-bold"> <%= post.comments.count %> </small>
          </div>
          <div>
            <% if post.images.count > 1 %>
              <i class=" fa-solid fa-images text-white multiple-images "></i>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
