<div class="container home-sections min-vh-100 p-0 d-flex justify-content-center align-items-center">
  <div class="images-section">
    <%= image_tag 'home-phone-bg.png', class: "images-section mx-3 d-none d-lg-block" %>
  </div>
  <div class="login-section">
    <div class="card text-center rounded-0 pt-5" style="width:22rem;">
      <%= image_tag 'logo.png', class: "card-img-top"%>
      <div class="card-body mx-4 px-2">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-2 mt-4">
            <%= f.email_field :email, class: "form-control", id: "email", placeholder: "Phone number, username, or email" %>
          </div>
          <div class="mb-3">
            <%= f.password_field :password, class: "form-control", id: "password", placeholder: "Password" %>
          </div>
          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-primary w-100" %>
          </div>
        <% end %>
      </div>
      <div class="d-flex align-items-center mt-2 px-4">
        <div class="line"></div>
        <div class="line-text">OR</div>
        <div class="line"></div>
      </div>
      <a href="#" class="d-block my-3 text-decoration-none fw-bold">
        <%= image_tag("facebook.png", class: "facebook") %>
        Log in with Facebook
      </a>
      <% if notice %>
        <p class="notice my-1"><%= notice %></p>
      <% elsif alert %>
        <p class="alert my-1"><%= alert %></p>
      <% end %>
      <a href="#" class="fs-6 d-block my-2 text-decoration-none">Forgot Password?</a>
      <div class="unlawful-content my-4 px-4">You can also report content you believe is unlawful in your country without logging in.</div>
    </div>
    <div class="card text-center rounded-0 py-3 mt-3" style="width:22rem;">
      <div class="card-text">
        Don't have an account?
        <%= link_to 'Sign Up', new_user_registration_path, class: "fs-6 my-4 py-3 text-decoration-none text-secondary fw-bold" %>
      </div>
    </div>
  </div>
</div>
