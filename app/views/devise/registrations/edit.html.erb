<div class="w-100 container-fluid d-flex flex-column pt-5 px-0 ">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="container-fluid card d-flex flex-row my-3 px-0">
      <div class="d-flex flex-column border-end" style="width: 20%">
        <a href="#" class="active p-3 profile-edit-btn">Edit Profile</a>
      </div>
      <div class="d-flex flex-column mx-auto py-4 px-0" style="width: 80%">
        <div class=" d-flex flex-column justify-content-center mx-auto">
          <div class="d-flex justify-content-between">
            <p class=" fs-4 mb-5 fw-bold">Edit profile</p>
            <div class="form-check mt-2 flex-shrink-0">
              <%= f.check_box :private, class:"form_check-input" %>
              <%= f.label :private_account, class: "form check-label fw-bold" %>
            </div>
          </div>
          <div class="d-flex align-items-center w-100 border rounded-4">
            <% if resource.profile_pic.attached? %>
              <%= image_tag resource.profile_pic, class: "img-thumbnail rounded-circle", style: "width: 25vw; max-width: 60px; height: 25vw; max-height: 60px; padding: 2px; border; border-width: 2px; border-color: red"%>
            <% else %>
              <%= image_tag "profile-pic.png", class: "img-thumbnail rounded-circle", style: "width: 25vw; max-width: 60px; height: 25vw; max-height: 60px; padding: 2px; border; border-width: 2px; border-color: red"%>
            <% end %>
            <div class="d-flex flex-row justify-content-between mx-3 w-100 ">
              <div>
                <p class="fw-bold py-4  " style=" overflow: hidden; text-overflow: ellipsis; white-space: nowrap; max-width: 10rem; line-height: 2.0"> <%= resource.username %></p>
              </div>
              <div>
                <p> <%= f.file_field :profile_pic, class: "form-control form-control-sm my-4"%> </p>
              </div>
            </div>
          </div>
          <p class=" fs-5 mt-3"> <%= f.label :full_name, class:"col-sm-4 col-form-label fw-bold" %> </p>
          <div class="row mb-1 mt-0">
            <div class="col-sm-8 w-100">
              <%= f.text_field :full_name, placeholder:"Full Name", autofocus: true, class:"form-control rounded-4"%>
              <small class="text-muted"></small>
            </div>
          </div>
          <p class=" fs-5 mt-3"> <%= f.label :username, class:"col-sm-4 col-form-label fw-bold" %> </p>
          <div class="row mb-1 mt-0">
            <div class="col-sm-8 w-100">
              <%= f.text_field :username, placeholder:"Username", autofocus: true, class:"form-control rounded-4"%>
            </div>
          </div>
          <p class=" fs-5 mt-3"> <%= f.label :bio, class:"col-sm-4 col-form-label fw-bold" %> </p>
          <div class="row mb-1 mt-0">
            <div class="col-sm-8 w-100">
              <%= f.text_area :bio, autofocus: true, class:"form-control rounded-4", rows: 2 %>
            </div>
          </div>
          <p class=" fs-5 mt-3"> <%= f.label :email, class:"col-sm-4 col-form-label fw-bold" %> </p>
          <div class="row mb-1 mt-0">
            <div class="col-sm-8 w-100">
              <%= f.email_field :email, placeholder:"Email", autofocus: true, class:"form-control rounded-4"%>
            </div>
          </div>
          <p class=" fs-5 mt-3"> <%= f.label :phone_number, class:"col-sm-4 col-form-label fw-bold" %> </p>
          <div class="row mb-1 mt-0">
            <div class="col-sm-8 w-100">
              <%= f.text_field :phone_number, placeholder:"Phone number", autofocus: true, class:"form-control rounded-4"%>
            </div>
          </div>
          <p class=" fs-5 mt-3"> <%= f.label :new_password, class:"col-sm-4 col-form-label fw-bold" %> </p>
          <div class="row mb-1 mt-0">
            <div class="col-sm-8 w-100">
              <%= f.password_field :password, placeholder:"New Password", autofocus: true, class:"form-control rounded-4"%>
              <small class="text-muted">"Leave it blank if you don't want to change it"</small>
            </div>
          </div>
          <p class=" fs-5 mt-3"> <%= f.label :new_password_confirmation, class:"col-sm-4 col-form-label fw-bold w-100" %> </p>
          <div class="row mb-1 mt-0">
            <div class="col-sm-8 w-100">
              <%= f.password_field :password_confirmation, placeholder:"New Password confirmation", autofocus: true, class:"form-control rounded-4"%>
            </div>
          </div>
          <p class=" fs-5 mt-3"> <%= f.label :current_password, class:"col-sm-4 col-form-label fw-bold w-100" %> </p>
          <div class="row mb-1 mt-0">
            <div class="col-sm-8 w-100">
              <%= f.password_field :current_password, placeholder:"Current Password", autofocus: true, class:"form-control rounded-4"%>
            </div>
            <small class="text-muted">"Current password required to submit"</small>
          </div>
          <div class="d-flex justify-content-center mt-4  mb-1">
            <%= f.submit "Submit", class:"btn btn-primary px-5" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
